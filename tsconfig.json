{
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"],
      "public": ["./public/*"]
    },
    // "typeRoots": [
    // ],
    "types": []
  },
  "diagnostics": true,
  // "include": [],
  "include": [
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue",
    ".vitepress/**/*.json",
    ".vitepress/**/*",
    "typings/",
    "env.d.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "src/**/*.md",
    "plugins/**/*.ts",
    "tests"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "build",
    "public",
    "threejs",
    "font",
    "scripts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}

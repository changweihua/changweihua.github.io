{
  "compilerOptions": {
    "composite": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"],
      "@vp/*": ["./.vitepress/*"],
      "public": ["./public/*"]
    },
    // "typeRoots": [
    // ],
    "types": [],
    //提示无法覆盖文件时，需要考虑设置此项
    "outDir": "dist"
  },
  "diagnostics": true,
  // "include": [],
  "include": [
    ".vitepress/src/**/*",
    ".vitepress/components/**/*",
    ".vitepress/plugins/**/*",
    ".vitepress/theme/**/*",
    ".vitepress/utils/**/*",
    ".vitepress/*",
    "typings/",
    "env.d.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "src/**/*.md",
    "plugins/**/*.ts",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    "**/dist/**",
    "**/cache/**",
    "build",
    "public",
    "threejs",
    "font",
    "scripts",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
